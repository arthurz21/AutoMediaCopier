<Window x:Class="VideoTransferApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SD Card Media Transfer" Height="680" Width="650"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="SD Card Media Transfer to USB" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <GroupBox Grid.Row="1" Header="Settings" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <CheckBox x:Name="TransferVideosCheckBox" Content="Transfer Videos" 
                          IsChecked="True" Margin="0,0,0,5"/>
                <TextBox x:Name="VideoExtensionsTextBox" Text=".mp4,.avi,.mov,.mkv,.wmv,.m4v" 
                         Margin="20,0,0,10" IsEnabled="{Binding ElementName=TransferVideosCheckBox, Path=IsChecked}"/>

                <CheckBox x:Name="TransferPhotosCheckBox" Content="Transfer Photos" 
                          IsChecked="True" Margin="0,0,0,5"/>
                <TextBox x:Name="PhotoExtensionsTextBox" Text=".jpg,.jpeg,.png,.raw,.cr2,.nef,.arw,.dng" 
                         Margin="20,0,0,10" IsEnabled="{Binding ElementName=TransferPhotosCheckBox, Path=IsChecked}"/>

                <TextBlock Text="Transfer Mode:" FontWeight="SemiBold" Margin="0,5,0,5"/>
                <RadioButton x:Name="ModeTimeBasedRadio" Content="Time-based (recommended)" 
                             IsChecked="True" GroupName="TransferMode" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="20,0,0,10" 
                            IsEnabled="{Binding ElementName=ModeTimeBasedRadio, Path=IsChecked}">
                    <TextBlock Text="Transfer files from last:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="TimeWindowMinutesTextBox" Text="40" Width="50" VerticalAlignment="Center"/>
                    <TextBlock Text="minutes" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <RadioButton x:Name="ModeFixedCountRadio" Content="Fixed number of latest files" 
                             GroupName="TransferMode" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="20,0,0,0" 
                            IsEnabled="{Binding ElementName=ModeFixedCountRadio, Path=IsChecked}">
                    <TextBlock Text="Number of files:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="MaxFilesTextBox" Text="10" Width="50" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Activity Log" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox" IsReadOnly="True" 
                         TextWrapping="Wrap" VerticalAlignment="Stretch"
                         Background="#F5F5F5" BorderThickness="0"/>
            </ScrollViewer>
        </GroupBox>

        <GroupBox Grid.Row="3" Header="Transfer Progress" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <TextBlock x:Name="CurrentFileTextBlock" Text="No transfer in progress" 
                           Margin="0,0,0,5" FontWeight="SemiBold"/>

                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="CurrentFileStatusTextBlock" 
                               Text="" FontSize="11" Foreground="#666"/>
                    <TextBlock Grid.Column="1" x:Name="CurrentFileTimeTextBlock" 
                               Text="" FontSize="11" Foreground="#666"/>
                </Grid>

                <ProgressBar x:Name="TransferProgressBar" Height="25" 
                             Minimum="0" Maximum="100" Margin="0,5,0,0"/>
                <TextBlock x:Name="ProgressPercentTextBlock" Text="0%" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>

                <Separator Margin="0,10,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="OverallProgressTextBlock" 
                               Text="Overall: 0 of 0 files" FontSize="12"/>
                    <TextBlock Grid.Column="1" x:Name="TotalTimeRemainingTextBlock" 
                               Text="" FontSize="12" FontWeight="SemiBold" Foreground="#0066CC"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CheckNowButton" Content="Check Existing Drives" 
                    Width="150" Margin="0,0,10,0" Click="CheckNowButton_Click" Height="32"/>
        </StackPanel>
    </Grid>
</Window>